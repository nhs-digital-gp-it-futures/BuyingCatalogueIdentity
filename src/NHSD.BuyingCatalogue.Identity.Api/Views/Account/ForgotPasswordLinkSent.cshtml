@{
    ViewData["PageTitle"] = "You've been sent a link";
    ViewData["PageDescription"] = "A link to set your password has been sent to the email address you provided.";
}

<div class="nhsuk-width-container">
    <main class="nhsuk-main-wrapper">
        <div data-test-id="login-page">
            <div class="nhsuk-grid-row">
                <div class="nhsuk-grid-column-two-thirds">
                    <div class="nhsuk-back-link">
                        <a nhs-back-link asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" back-link-label="Back to log in"></a>
                    </div>
                    <h1 data-test-id="page-title" class="nhsuk-heading-xl nhsuk-u-margin-bottom-2">@ViewData["PageTitle"]</h1>
                    <p data-test-id="page-description" class="nhsuk-heading-s nhsuk-u-margin-bottom-5">@ViewData["PageDescription"]</p>
                </div>
            </div>
        </div>
    </main>
</div>
